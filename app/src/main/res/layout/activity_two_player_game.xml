<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoPlayerGameActivity">

    <fragment
        android:id="@+id/arFragmentTwoPlayers"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="16dp" />


    <Button
        android:id="@+id/buttonForward"
        android:layout_width="455dp"
        android:layout_height="548dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintEnd_toEndOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintStart_toStartOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintTop_toTopOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="481dp"
        android:layout_height="307dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintEnd_toEndOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintStart_toStartOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintTop_toTopOf="@+id/buttonForward"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/buttonLeft"
        android:layout_width="144dp"
        android:layout_height="816dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintTop_toTopOf="@+id/buttonForward"
        app:layout_constraintVertical_bias="0.4" />


    <Button
        android:id="@+id/buttonRight"
        android:layout_width="156dp"
        android:layout_height="809dp"
        android:layout_marginStart="268dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintStart_toStartOf="@+id/buttonLeft"
        app:layout_constraintTop_toTopOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintVertical_bias="0.346" />


    <Button
        android:id="@+id/buttonFire"
        android:layout_width="79dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/fire_button"
        app:layout_constraintBottom_toBottomOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintEnd_toEndOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/arFragmentTwoPlayers" />

    <Button
        android:id="@+id/buttonUp"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="8dp"
        android:text="UP"
        android:textColor="@color/colorMain"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="@+id/buttonLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDown"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="8dp"
        android:text="DOWN"
        android:textColor="@color/colorMain"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/arFragmentTwoPlayers"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="@+id/buttonForward"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>